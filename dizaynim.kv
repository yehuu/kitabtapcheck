<Interface>:
    Screen:
        MDBoxLayout:
            orientation: "vertical"
            valign: "top"
            MDTopAppBar:
                title: "Kitab tap"
            MDBoxLayout:
                padding: dp(10)
                adaptive_height: True
                spacing: dp(10)
                MDTextField:
                    id: kitab_axtar
                    mode: "round"
                    icon_left: 'magnify'
                    fill_color_normal: 0.3,0.3,0.3,0.3
                    hint_text: "Kitabı adı daxil edin"
                    text:""
                MDRaisedButton:
                    text: "Axtar"
                    md_bg_color: "red"
                    on_release: root.axtarilir_pop('axtar589')
            MDScrollView:
                do_scroll_y: True
                MDGridLayout:
                    id: cards
                    cols: 3
                    spacing: dp(20)
                    padding: 30, 30
                    row_force_default: True
                    row_default_height: 400
                    adaptive_height: True
            MDBottomAppBar:
                MDTopAppBar:
                    title: "kitabtap.com"
                    icon: "instagram"
                    type: "bottom"
                    mode: "end"
                    on_action_button: root.open_url('https://instagram.com/kitabtap_com')
